{% block formstart %}{% endblock %}
<div class="modal-header bg-primary text-white">
    {% block modalheader %}{% endblock %}
    <h5 class="modal-title" id="base_modalLabel">
        {% block modalTitle %}{% endblock %}
    </h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="itsloading bg-secondary" hidden="hidden" style="width: 100%; height: 100%;"></div>
    <div id="base_modal_content">
        {% block modalContent %}{% endblock %}
    </div>
</div>
<div class="modal-footer">
    {% block modalFooter %}{% endblock %}
</div>
{% block formend %}{% endblock %}