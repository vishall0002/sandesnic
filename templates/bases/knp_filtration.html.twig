<form id="pagination-filterform" method="get" action="{{ action }}" enctype="application/x-www-form-urlencoded">
    <div class="form-inline align-items-center float-sm-right">
        <select class="form-control form-control-sm  mb-2 mr-sm-2" name="{{ filterFieldName }}">
            {% for field, label in fields %}
                <option value="{{ field }}" {% if selectedField == field %} selected="selected" {% endif %}>{{ label }}</option>
            {% endfor %}
        </select>
        <input class="form-control form-control-sm  mb-2 mr-sm-2" type="text" value="{{ selectedValue }}" name="{{ filterValueName }}"/>
        <button class="btn btn-primary btn-xs  mb-2 mr-sm-2 paginator-filter-button">{{ options.button }}</button>
    </div>
</form>