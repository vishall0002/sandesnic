{% extends 'bases/base_masters.html.twig' %}
{% block content %}
	<div class="row">
		<div class="col-12">
			<h4>
				<strong>
					{% if organization is defined %}
						Organization -
						{{ organization.organizationName }}
					{% else %}
						TOP/BOTTOM States/HOGs/Users
					{% endif %}
				</strong>
			</h4>
		</div>
		
	
	<div class="card m-2">
		<div class="card-header">
			<h4 class="float-left m-0">States</h4>
			<span class="float-right">{{period}}</span>
		</div>
		<div class="card-body p-1">
			<div class="row p-2">
				<div class="col-6">
					<div class="col text-center text-success"><strong>TOP</strong></div>
					<table class="table table-striped table-bordered table-hover table-sm" id="replace_table_val">
						<thead>
							<tr>
								<th class="text-center">#</th>
								<th class="text-left" style="width: 300px;">OU</th>
								<th class="text-right">Percapita</th>
							</tr>
						</thead>
						<tbody>
							{% for record in topStates %}
								<tr>
									<td class="text-center">{{ loop.index }}</td>
									<td class="text-left">
										<strong>{{record.ou_name}}</strong>
									</td>
									<td class="text-right align-right ">
										{{record.percapita}}
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
				<div class="col-6">
					<div class="col text-center text-danger"><strong>BOTTOM</strong></div>
					<table class="table table-striped table-bordered table-hover table-sm" id="replace_table_val">
						<thead>
							<tr>
								<th class="text-center">#</th>
								<th class="text-left" style="width: 300px;">OU</th>
								<th class="text-right">Percapita</th>
							</tr>
						</thead>
						<tbody>
							{% for record in bottomStates %}
								<tr>
									<td class="text-center">{{ loop.index }}</td>
									<td class="text-left">
										<strong>{{record.ou_name}}</strong>
									</td>
									<td class="text-right align-right ">
										{{record.percapita}}
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
	<div class="card m-2">
		<div class="card-header">
			<h4 class="float-left m-0">HOGs</h4>
			<span class="float-right">{{period}}</span>
		</div>
		<div class="card-body p-1">
			<div class="row p-2">
				<div class="col-6">
					<div class="col text-center text-success"><strong>TOP</strong></div>
					<table class="table table-striped table-bordered table-hover table-sm" id="replace_table_val">
						<thead>
							<tr>
								<th class="text-center">#</th>
								<th class="text-left" style="width: 300px;">OU</th>
								<th class="text-right">Percapita</th>
							</tr>
						</thead>
						<tbody>
							{% for record in topHogs %}
								<tr>
									<td class="text-center">{{ loop.index }}</td>
									<td class="text-left">
										<strong>{{record.ou_name}}</strong>
									</td>
									<td class="text-right align-right ">
										{{record.percapita}}
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
				<div class="col-6">
					<div class="col text-center text-danger"><strong>BOTTOM</strong></div>
					<table class="table table-striped table-bordered table-hover table-sm" id="replace_table_val">
						<thead>
							<tr>
								<th class="text-center">#</th>
								<th class="text-left" style="width: 300px;">OU</th>
								<th class="text-right">Percapita</th>
							</tr>
						</thead>
						<tbody>
							{% for record in bottomHogs %}
								<tr>
									<td class="text-center">{{ loop.index }}</td>
									<td class="text-left">
										<strong>{{record.ou_name}}</strong>
									</td>
									<td class="text-right align-right ">
										{{record.percapita}}
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
	<div class="card m-2">
		<div class="card-header">
			<h4 class="float-left m-0">TOP Users</h4>
			<span class="float-right">{{period}}</span>
		</div>
		<div class="card-body">
			<div class="row p-2">
				<div class="col">
					<table class="table table-striped table-bordered table-hover table-sm" id="replace_table_val">
						<thead>
							<tr>
								<th class="text-center">#</th>
								<th class="text-left" style="width: 300px;">OU</th>
								<th class="text-left">Employee Name</th>
								<th class="text-left">Designation</th>
								<th class="text-left">Email</th>
								<th class="text-right">Total Messages</th>
							</tr>
						</thead>
						<tbody>
							{% for user in topUsers %}
								<tr>
									<td class="text-center">{{ loop.index }}</td>
									<td class="text-left align-left ">
										<strong>{{user.ou_name}}</strong>
									</td>
									<td class="text-left align-left ">
										{{user.employee_name}}
									</td>
									<td class="text-left">
										{{user.designation_name}}
									</td>
									<td class="text-left align-left ">
										{{user.email_address}}
									</td>
									<td class="text-right align-right ">
										{{user.message_count}}
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	
	</div>
	{% endblock %}
