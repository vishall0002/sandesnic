{% extends 'bases/base_masters.html.twig' %}
{% block content %}
	<div class="row">
		<div class="col-6">
			<h5>
				Employee/Login Management
			</h5>
		</div>
		<div class="col-6 text-right">
			<button class="btn btn-xs btn-primary" data-toggle="collapse" data-target="#__filterContainer" aria-expanded="false" aria-controls="__filterContainer">
				<span class="d-none d-md-block">Filter</span>
				<i class="d-sm-block d-md-none d-lg-none fa fa-search"></i>
			</button>
			<button class="btn btn-xs btn-primary gims_message" data-gim-path="{{ path('portal_emp_gims_messages') }}" data-path="{{ path('portal_send_message') }}" data-email="{{ path('portal_ntfy_email') }}" data-msg="{{ path('portal_ntfy_gims') }}" data-type="mfb">
				<span class="d-none d-md-block">
					Sandes Message
				</span>
				<i class="d-sm-block d-md-none d-lg-none fa fa-comment"></i>
			</button>
			<button class="btn btn-xs  btn-primary csv_download" data-path="{{ path('dashboard_download_csv_generic') }}" data-action-path="{{ path('portal_emp_csv')}}" type="button" data-original-title="" title="">
				<span class="d-none d-md-block">
					Download
				</span>
				<i class="d-sm-block d-md-none d-lg-none fa fa-download"></i>
			</button>
			<button class="btn btn-xs btn-success btn-action-new text-white" data-list-path="{{ path('portal_emp_list' )}}" data-new-path="{{ path('portal_emp_new' )}}" title="Register a new employee">
				<span class="d-none d-md-block">
					+ New
				</span>
				<i class="d-sm-block d-md-none d-lg-none fa fa-plus"></i>
			</button>
		</div>
	</div>
	{% include '/portal/generic/_dynamic_filter.html.twig' with {'listpath':path('portal_emp_list')} %}
	<div id="__listContainer">
		{{ render(controller('App\\Controller\\Portal\\EmployeeController::list')) }}
	</div>
{% endblock %}
{% block js %}
	<script src="{{ asset('build/js/employee.js') }}"></script>
{% endblock %}
