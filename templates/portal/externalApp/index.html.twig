{% extends 'bases/base_masters.html.twig' %}
{% block content %}
	<div class="row">
		<div class="col-8">
			<h5>
				Sandes Messaging Gateway - Registered Apps
			</h5>
		</div>
		<div class="col-4 text-right">
			<button class="btn btn-xs btn-primary" data-toggle="collapse" data-target="#__filterContainer" aria-expanded="false" aria-controls="__filterContainer">
				<span class="d-none d-md-block">Filter</span>
				<i class="d-sm-block d-md-none d-lg-none fa fa-search"></i>
			</button>
            <button data-new-path="{{ path('portal_externalApp_new') }}" data-list-path="{{ path('portal_externalApp_list') }}" type="button" class="btn btn-success btn-xs btn-action-new" data-toggle="modal">
                <span class="d-none d-md-block">
                + New
                </span>
                <i class="d-sm-block d-md-none d-lg-none fa fa-plus"></i>
            </button>
		</div>
	</div>
	{% include '/portal/generic/_dynamic_filter.html.twig' with {'listpath':path('portal_externalApp_list')} %}
	<div id="__listContainer">
		{{ render(controller('App\\Controller\\Portal\\ExternalAppController::list')) }}
	</div>
{% endblock %}
{% block js %}
	<script src="{{ asset('build/js/generic.js') }}"></script>
{% endblock %}


