{% extends 'bases/base_masters.html.twig' %}
{% block content %}
	<div class="row">
		<div class="col-6">
			<h5>
				Upload Management
			</h5>
		</div>
		<div class="col-6 text-right">
			<button class="btn btn-xs btn-primary mr-1" data-toggle="collapse" data-target="#__filterContainer" aria-expanded="false" aria-controls="__filterContainer">
				<span class="d-none d-md-block">Filter</span>
				<i class="d-sm-block d-md-none d-lg-none fa fa-search"></i>
			</button>
			<a class="btn-action-new invisible" data-list-path="{{ path('portal_upload_list' )}}" >
			</a>
			{% if (is_granted("ROLE_SUPER_ADMIN")) %}
				<a class="btn btn-xs btn-success  btn-action-new-multi mr-1" data-list-path="{{ path('portal_upload_list' )}}" data-new-path="{{ path('portal_upload_new_android' )}}" title="New upload">
					+ New Android
				</a>
				<a class="btn btn-xs btn-success btn-action-new-multi mr-1" data-list-path="{{ path('portal_upload_list' )}}" data-new-path="{{ path('portal_upload_new_apple' )}}" title="New upload">
					+ New Apple
				</a>
			{% endif %}
		</div>
	</div>
	{% include '/portal/generic/_dynamic_filter.html.twig' with {'listpath':path('portal_upload_list')} %}
	<div id="__listContainer">
		{{ render(controller('App\\Controller\\Portal\\UploadController::lists')) }}
	</div>
{% endblock %}
{% block js %}
	<script src="{{ asset('build/js/upload.js') }}"></script>
{% endblock %}
