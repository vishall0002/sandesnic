{% extends 'bases/base_masters.html.twig' %}
{% block content %}
    <div class="row">
		<div class="col-8">
			<h5>
				{{ label }}
			</h5>
            <span class="text-danger">** Beta</span>
		</div>
        <div class="col-12">
            {% if TotalUsersList > 0 %}
                <table class="table table-striped table-bordered table-hover table-sm">
                    <thead>
                        <th>#</th>
                        <th>Name</th>
                        <th>Ministry</th>
                        <th>Organization</th>
                        <th>Organization Unit</th>
                        <th>Email Id</th>
                        <th>Mobile No</th>
                        <th>OS</th>
                        <th>App Version</th>
                        <th>Brand</th>
                    </thead>
                    <tbody>
                        {% for record in TotalUsersList %}
                            <tr>
                                <td>{{loop.index}}</td>
                                <td>{{record.name}}</td>
                                <td>{{record.ministry_name}}</td>
                                <td>{{record.o_name}}</td>
                                <td>{{record.ou_name}}</td>
                                <td>{{record.email}}</td>
                                <td>{{record.mobile_no}}</td>
                                <td>{{record.os | upper ~' - '~record.os_version | upper}}</td>
                                <td>{{record.app_version}}</td>
                                <td>{{record.manufacturer}}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>          
            {% else %}
                <h4 class="alert alert-info">No Users Found</h4>
            {% endif %}
        </div>
    </div>
{% endblock %}
    